{
  "name": "ai-code-assistant",
  "displayName": "AI Code Assistant",
  "description": "Расширение для Visual Studio Code, предоставляющее AI-ассистента для анализа, рефакторинга, документирования и улучшения кода",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-assistant.openPanel",
        "title": "Открыть AI Code Assistant",
        "icon": "$(robot)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "ai-assistant",
          "name": "AI Code Assistant",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-assistant",
          "title": "AI Code Assistant",
          "icon": "$(robot)"
        }
      ]
    }
  },
  "scripts": {
    "dev": "concurrently \"pnpm run dev:webview\" \"pnpm run watch\"",
    "build": "pnpm run compile",
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./ && pnpm run build:webview",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "build:webview": "webpack --mode=production",
    "dev:webview": "webpack --mode=development --watch",
    "package": "vsce package",
    "install-local": "pnpm run compile; vsce package; code --install-extension ai-code-assistant-1.0.0.vsix"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.x",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "ts-loader": "^9.5.1",
    "css-loader": "^6.8.1",
    "sass-loader": "^13.3.2",
    "sass": "^1.69.5",
    "style-loader": "^3.3.3",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "concurrently": "^9.1.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.1.3",
    "openai": "^4.20.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "mobx": "^6.12.0",
    "mobx-react-lite": "^4.0.5",
    "phosphor-react": "^1.4.1",
    "node-fetch": "^3.3.2"
  }
} 