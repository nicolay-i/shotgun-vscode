{
  "name": "shotgun-vscode",
  "displayName": "Shotgun AI Assistant",
  "description": "AI assistant for code analysis with file selection and Gemini Pro integration",
  "version": "0.0.1",
  "publisher": "your-publisher",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "shotgun.openPanel",
        "title": "Open Shotgun AI Panel",
        "category": "Shotgun"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "shotgunPanel",
          "name": "Shotgun AI",
          "when": "shotgun.enabled"
        }
      ]
    },
    "configuration": {
      "title": "Shotgun AI",
      "properties": {
        "shotgun.geminiApiKey": {
          "type": "string",
          "default": "",
          "description": "Gemini Pro API key"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile && pnpm run build-webview",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build-webview": "webpack --mode production",
    "watch-webview": "webpack --mode development --watch",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts,tsx",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "ts-loader": "^9.4.0",
    "css-loader": "^6.8.0",
    "style-loader": "^3.3.0",
    "sass": "^1.69.0",
    "sass-loader": "^13.3.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "phosphor-react": "^1.4.1"
  }
} 